<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tutorial.maps.google.googlemapsapplication.PhotoActivity">

    <ImageView
        android:id="@+id/view_photo"
        android:src="@drawable/cam"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locate"
        android:id="@+id/btn_photo_home"
        android:onClick="redirectToHome"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/main_btn_maps"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btn_take_photo"
        android:layout_marginEnd="34dp"
        android:layout_alignBaseline="@+id/main_btn_maps"
        android:layout_alignBottom="@+id/main_btn_maps"
        android:layout_toStartOf="@+id/main_btn_maps" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMAGE"
        android:id="@+id/main_btn_maps"
        android:onClick="onClickOfMapButton"
        android:layout_alignBottom="@+id/btn_photo_home"
        android:layout_toEndOf="@+id/view_photo"
        android:layout_marginBottom="48dp" />
</RelativeLayout>
